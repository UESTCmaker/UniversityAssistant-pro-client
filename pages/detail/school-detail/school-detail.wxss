/* pages/detail/school-detail/school-detail.wxss */
@import "../detail-package/detail-package-template.wxss";
@import "../../list/search-item/search-item-template.wxss";
page{
    background-color: white;
}

.cover{
    width:100%;
    height: 400rpx;
}

.cover-img-hover{
    width: 100%;
    height: 400rpx;
    position: absolute;
    top: 0;
    left:0;
    display: flex;
    flex-direction: column;
}

.title{
    margin-top: 100rpx;
    margin-left: 40rpx;
    font-family: MicroSoft Yahei;
    font-size: 24px;
    color: snow;
    font-weight: bold;
}

.sub-title{
    margin-top: 10rpx;
    margin-left: 40rpx;
    font-family: MicroSoft Yahei;
    font-size: 16px;
    color: snow;
    font-weight: bold;
}

.sicon{
    width: 220rpx;
    height: 200rpx;
    position: absolute;
    top: 300rpx;
    right: 40rpx;
}

.detail-container{
 font-family: MicroSoft Yahei;
 margin: 25rpx 20rpx 20rpx 40rpx;
 display: flex;
 flex-direction: column;
}

.name{
    font-size: 18px;
    color: #333333;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.package{
    display: flex;
    flex-direction: row;
    font-size: 12px;
    margin-bottom: 10rpx;
}

.provide{
    color: #666;
}

.info{
    color:#333333;
    font-size: 12px;
}